<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".g_AcosoCallejero" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="209dp"
        android:layout_height="203dp"
        android:layout_marginTop="48dp"
        android:src="@mipmap/ic_callejero_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Acoso Callejero"
        android:textColor="#070707"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="332dp"
        android:layout_height="214dp"
        android:layout_marginTop="40dp"
        android:text="El acoso callejero es una forma de violencia de género que involucra comportamientos no deseados o agresivos, como comentarios, silbidos, gestos obscenos, persecución, tocamientos no consentidos u otras acciones intimidatorias que ocurren en espacios públicos, especialmente dirigidos a personas, en su mayoría mujeres, por razón de su género. Este tipo de acoso puede provocar incomodidad, miedo, inseguridad y afectar la libertad y seguridad de quienes lo sufren."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>